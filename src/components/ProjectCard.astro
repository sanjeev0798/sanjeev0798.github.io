---
const { title, summary, problem, approach, result, stack = [], links = {} } = Astro.props;
---
<article class="group rounded-2xl border p-5 hover:shadow-lg transition bg-white">
  <header class="flex items-start justify-between gap-4">
    <h3 class="text-xl font-semibold leading-tight">{title}</h3>
    {stack.length > 0 && (
      <div class="text-xs text-slate-500">{stack.join(' Â· ')}</div>
    )}
  </header>

  {summary && <p class="mt-2 text-slate-700">{summary}</p>}

  <ul class="mt-3 text-sm leading-6">
    {problem && <li><span class="font-medium">Problem:</span> {problem}</li>}
    {approach && <li><span class="font-medium">Approach:</span> {approach}</li>}
    {result && <li><span class="font-medium">Result:</span> {result}</li>}
  </ul>

  <div class="mt-4 flex gap-3 text-sm">
    {links.repo && <a class="underline" href={links.repo} target="_blank">GitHub</a>}
    {links.post && <a class="underline" href={links.post} target="_blank">Write-up</a>}
    {links.demo && <a class="underline" href={links.demo} target="_blank">Demo</a>}
  </div>
</article>
