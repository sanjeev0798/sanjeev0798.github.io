---
import { siteConfig } from "../config";
const skills = siteConfig.skills ?? [];
---

<section id="about" class="px-6 sm:px-8 md:px-12 lg:px-16 py-12 sm:py-16">
  <div class="max-w-6xl mx-auto">
    <!-- Heading -->
    <div class="mb-6 sm:mb-8">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold leading-tight tracking-tight text-gray-900">
        About Me
      </h2>
      <div class="w-[75px] h-[5px] mt-2 rounded-full" style={`background-color: ${siteConfig.accentColor}`}></div>
    </div>

    <!-- Content -->
    <div class="space-y-6">
      <p class="text-lg sm:text-xl leading-relaxed text-gray-600">
        {siteConfig.aboutMe}
      </p>

      <div class="flex flex-wrap gap-3">
        {skills.map((skill) => (
          <span class="px-3 py-1.5 bg-gray-100 text-gray-800 rounded-full text-sm sm:text-base font-medium hover:bg-gray-200 transition-colors">
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
